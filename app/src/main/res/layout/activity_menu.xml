<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".game.MenuActivity">
    <ImageView
        android:importantForAccessibility="no"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo_app_transparent_fit"
        android:id="@+id/titleMenu"
        android:layout_marginHorizontal="48sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvPlayBtn"
        />

    <TextView
        android:id="@+id/tvPlayBtn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/ripple_orange"
        android:clickable="true"
        android:text="Play"
        android:elevation="7sp"
        android:gravity="center"
        android:fontFamily="@font/roboto_mono"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/titleMenu"
        app:layout_constraintBottom_toTopOf="@id/tvHowToPlayBtn"
        android:layout_marginHorizontal="24sp"
        />
    <TextView
        android:id="@+id/tvHowToPlayBtn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/ripple_white"
        android:clickable="true"
        android:text="How to play"
        android:elevation="7sp"
        android:gravity="center"
        android:fontFamily="@font/roboto_mono"
        android:textColor="@color/blue"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/tvPlayBtn"
        app:layout_constraintBottom_toTopOf="@id/tvExitBtn"
        android:layout_marginHorizontal="24sp"
        />
    <TextView
        android:elevation="7sp"
        android:id="@+id/tvExitBtn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/ripple_white"
        android:clickable="true"
        android:text="Exit"
        android:gravity="center"
        android:fontFamily="@font/roboto_mono"
        android:textColor="@color/blue"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/tvHowToPlayBtn"
        app:layout_constraintBottom_toTopOf="@id/tvPolicyBtn"
        android:layout_marginHorizontal="24sp"
        />
    <TextView
        android:visibility="invisible"
        android:id="@+id/tvPolicyBtn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/ripple_dark_blue"
        android:clickable="true"
        android:text="Policy"
        android:elevation="7sp"
        android:gravity="center"
        android:fontFamily="@font/roboto_mono"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvExitBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="48sp"
        android:layout_marginTop="69sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>